{import * from COM.CURLAP.LIB.CODEC}

{TestSuite "COM.CURLAP.LIB.CODEC",
    {test-case "hex",
        {TestCondition.assert {hex-encode {ByteVec 11, 7, 10}} == "0b070a"}
        {TestCondition.assert {hex-encode {ByteVec 255, 7, 10}} == "ff070a"}
        
        def b = {hex-decode "0b070a"}
        {TestCondition.assert b[0] == 11}
        {TestCondition.assert b[1] == 7}
        {TestCondition.assert b[2] == 10}
    }
}

